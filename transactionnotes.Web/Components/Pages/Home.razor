@page "/"

@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

<PageTitle>Welcome</PageTitle>

<CascadingAuthenticationState>
    <AuthorizeView>
        <NotAuthorized>
            <div class="hero-bg d-flex align-items-center justify-content-center min-vh-100">
                <div class="container hero-login-box text-center p-5 bg-white bg-opacity-75 rounded-4 shadow-lg">
                    <h1 class="display-4 mb-3">Transaction Notes</h1>
                    <p class="lead mb-4">
                        Securely track, manage, and analyze your transactions.
                    </p>
                    <div class="d-flex justify-content-center gap-3 mb-2">
                        <form action="/account/login" method="post">
                            <AntiforgeryToken />
                            <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </form>
                    </div>
                    <div>
                        <form action="/account/login" method="post" style="display:inline;">
                            <AntiforgeryToken />
                            <button type="submit" class="btn btn-link text-secondary small p-0 m-0 align-baseline" style="text-decoration: underline;">Create an account</button>
                        </form>
                    </div>
                </div>
            </div>
        </NotAuthorized>
        <Authorized>
            <h1>Hello, world!</h1>
            Welcome to your new app!
        </Authorized>
    </AuthorizeView>
</CascadingAuthenticationState>

@code {
    private void Register()
    {
        Navigation.NavigateTo("/authentication/register", forceLoad: true);
    }
}
